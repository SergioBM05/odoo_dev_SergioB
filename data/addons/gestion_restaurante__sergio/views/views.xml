<odoo>
  <data>

    <record model="ir.ui.view" id="gestion_restaurante__sergio.list">
      <field name="name">Lista de platos</field>
      <field name="model">gestion_restaurante__sergio.platos_sergio</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="description"/>
        </list>
      </field>
    </record>

    <record model="ir.actions.act_window" id="gestion_restaurante__sergio.action_window">
      <field name="name">Gestión de platos</field>
      <field name="res_model">gestion_restaurante__sergio.platos_sergio</field>
      <field name="view_mode">list,form</field>
    </record>

    <menuitem name="Gestión restaurante" id="gestion_restaurante__sergio.menu_root"/>
    <menuitem name="Menú" id="gestion_restaurante__sergio.menu"
              parent="gestion_restaurante__sergio.menu_root"/>

    <menuitem name="Platos" id="gestion_restaurante__sergio.menu_list"
              parent="gestion_restaurante__sergio.menu"
              action="gestion_restaurante__sergio.action_window"/>

  </data>
</odoo>
